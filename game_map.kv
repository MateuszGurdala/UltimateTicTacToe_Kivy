<BoxLayout>
    orientation: "horizontal"
    size_hint: 1, 0.3
    # Spacing between each place in all segments
    spacing: 7

<AnchorLayout>
    anchor_x: "center"
    anchor_y: "center"
    size_hint: 0.3, 1

<GameMap>
    BoxLayout:
        orientation: "vertical"
        size_hint: None, None
        size: self.parent.size
        pos: self.parent.pos
        # Padding between game map and its edges
        padding: 5

        # Segment Row I
        BoxLayout:
            AnchorLayout:
                Segment:
                    id: 1
            AnchorLayout:
                Segment:
                    id: 2
            AnchorLayout:
                Segment:
                    id: 3

        # Segment Row II
        BoxLayout:
            AnchorLayout:
                Segment:
                    id: 4
            AnchorLayout:
                Segment:
                    id: 5
            AnchorLayout:
                Segment:
                    id: 6

        # Segment Row III
        BoxLayout:
            AnchorLayout:
                Segment:
                    id: 7
            AnchorLayout:
                Segment:
                    id: 8
            AnchorLayout:
                Segment:
                    id: 9
