                                    on_release: app.root.game_settings_screen.game_settings_window.switch_rest(self.name)


            # Icons Player II
            BoxLayout:
                size_hint: 5/10, 1
                orientation: "vertical"

                AnchorLayout:
                    size_hint: 1, 3/8
                    Image:
                        size_hint: 0.42, 0.7
                        source: "graphics/game_settings_screen/icon_button_normal.png"
                        keep_ratio: False
                        allow_stretch: True

                AnchorLayout:
                    size_hint: 1, 5/8
                    BoxLayout:
                        size_hint: 0.9, 0.9
                        orientation: "vertical"
                        padding: 3

                        # Row I
                        BoxLayout:
                            size_hint: 1, 0.33
                            orientation: "horizontal"
                            AnchorLayout:
                                SwitchButton:
                                    id: enemy_1
                                    name: "enemy_1"
                                    on_release: app.root.game_settings_screen.game_settings_window.switch_rest(self.name)

                            AnchorLayout:
                                SwitchButton:
