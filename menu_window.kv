<AnchorLayout>
    anchor_x: "center"
    anchor_y: "center"

<MenuWindow>
    BoxLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "graphics/menu_screen/background_graphic.png"
        size: self.parent.size
        pos: self.parent.pos
        orientation: "vertical"

        FloatLayout:

            # PL
            AnchorLayout:
                size_hint: 0.4, 0.125
                pos_hint: {"x": 0.56, "y": 0.4}
                HoverButton:
                    source: "graphics/menu_screen/play_normal.png"
                    normal_image: "graphics/menu_screen/play_normal.png"
                    hover_image: self.normal_image
                    pressed_image: "graphics/menu_screen/play_pressed.png"
                    normal: 1, 1
                    hover: 0.95, 0.95
                    press: 0.9, 0.9
                    on_release:
                        app.root.current = "game_screen"
                        app.root.game_screen.game_window.discover_segments()
                        app.root.transition.direction = "up"

            # GS
            AnchorLayout:
                size_hint: 0.4, 0.125
                pos_hint: {"x": 0.56, "y": 0.25}
                HoverButton:
                    source: "graphics/menu_screen/game_settings_normal.png"
                    normal_image: "graphics/menu_screen/game_settings_normal.png"
                    hover_image: self.normal_image
                    pressed_image: "graphics/menu_screen/game_settings_pressed.png"
                    normal: 1, 1
                    hover: 0.95, 0.95
                    press: 0.9, 0.9
                    on_release:
                        app.root.current = "game_settings_screen"
                        app.root.transition.direction = "left"

            # E
            AnchorLayout:
                size_hint: 0.128, 0.08
                pos_hint: {"x": 0.01, "y": 0.01}
                HoverButton:
                    source: "graphics/menu_screen/exit_normal.png"
                    normal_image: "graphics/menu_screen/exit_normal.png"
                    hover_image: "graphics/menu_screen/exit_hover.png"
                    pressed_image: self.hover_image
                    normal: 1, 1
                    hover: 0.95, 0.95
                    press: 0.9, 0.9
                    on_release: app.stop()

            # AS
            AnchorLayout:
                size_hint: 0.128, 0.08
                pos_hint: {"x": 0.15, "y": 0.01}
                HoverButton:
                    source: "graphics/menu_screen/settings_normal.png"
                    normal_image: "graphics/menu_screen/settings_normal.png"
                    hover_image: self.normal_image
                    pressed_image: "graphics/menu_screen/settings_hover.png"
                    normal: 1, 1
                    hover: 0.95, 0.95
                    press: 0.9, 0.9
                    on_release:
                        app.root.current = "app_settings_screen"
                        app.root.transition.direction = "right"

